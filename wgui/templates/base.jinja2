{% extends "general.jinja2" %}

{% block head_inner %}
    {{ super() }}
    <link rel="stylesheet" href="/static/css/tailwind.css"/>
{% endblock %}

{% block body_inner %}
    {#    {% include "components/flash.jinja2" %}#}
    <div>
        <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

        <div x-data="{ sidebarOpen: false }" class="flex h-screen bg-gray-200">
            {% include "components/sidebar.jinja2" %}
            <div class="flex-1 flex flex-col overflow-hidden">
                {% block page_header_wrapper %}
                    {% include "components/header.jinja2" %}
                {% endblock %}
                <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
                    <div class="container mx-auto px-6 py-8">
                        {% block content_inner %}
                        {% endblock %}
                    </div>
                </main>
                {#                {% include "components/footer.jinja2" %}#}
            </div>
        </div>
    </div>
    {#    <script type="text/javascript" src="/static/js/alpine.js"></script>#}

