{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://json-schema.org/draft/2019-09/schema",
  "title": "WG-UI",
  "description": "Wireguard Configuration UI",
  "type": "object",
  "properties": {
    "config": {
      "description": "Configuration Item",
      "type": "object",
      "properties": {
        "range": {
          "type": "string"
        },
        "client_template": {
          "type": "string",
          "default": "/etc/wgui/client.tpl"
        },
        "peer_template": {
          "type": "string",
          "default": "/etc/wgui/peer.tpl"
        },
        "client_folder": {
          "type": "string",
          "default": "/etc/wireguard/clients/"
        },
        "peer_folder": {
          "type": "string",
          "default": "/etc/wireguard/peers/"
        },
        "saml_key": {
          "type": "string",
          "default": "/etc/wgui/saml.key"
        },
        "saml_crt": {
          "type": "string",
          "default": "/etc/wgui/saml.crt"
        },
        "idp_meta_url": {
          "type": "string",
          "format": "url"
        },
        "secret_key": {
          "type": "string"
        }
      },
      "required": [
        "range"
      ],
      "additionalProperties": false
    },
    "clients": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/device"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "config"
  ],
  "$defs": {
    "client": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "email",
        "ip_address",
        "filename"
      ],
      "properties": {
        "device": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "ip_address": {
          "type": "string"
        },
        "filename": {
          "type": "string"
        },
        "public_key": {
          "type": "string"
        }
      }
    }
  }
}
